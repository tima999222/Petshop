<Window x:Class="Petshop.SelectAddressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Petshop"
        mc:Ignorable="d"
        Background="#ffb960"
        Title="SelectAddressWindow" Height="300" Width="500">
    <Grid>
        <StackPanel VerticalAlignment="Center" Width="400">
            <Label>Укажите адресс доставки: </Label>
            <TextBox x:Name="Address_TextBox" FontSize="20"></TextBox>
            <Button x:Name="Save_Button" Click="Save_Button_Click">Сохранить</Button>
        </StackPanel>
    </Grid>
</Window>
